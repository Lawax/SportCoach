<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cybersporttech.sportcoach.controller.MainActivity">

    <TextView
        android:id="@+id/activity_nom_appli_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#4065A4"
        android:text="SPORT COACH"></TextView>

    <Button
        android:id="@+id/activity_consult_convocation_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:textColor="#1E90FF"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:text="Consulter une convocation"/>

    <Button
        android:id="@+id/activity_creation_convocation_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:textColor="#1E90FF"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:text="CrÃ©er une convocation"/>

    <Button
        android:id="@+id/activity_register_member_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:textColor="#1E90FF"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:text="enregistrer un membre"/>


</LinearLayout>